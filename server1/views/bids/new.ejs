<% include ../partials/header %>


<div class="container">
    <div class="row">
        <form class="form-signin" action="/campgrounds/<%= item._id %>/bids" method="POST">
            <div class="text-center mb-4">
                <h1 style="text-align: center">Add New Bid to <%= item.name %></h1>
             </div>
            <div class="card card-body bg-light">
                <div class="form-group">
                    <label for="bidamount">Bid Amount</label>
                    <input type="number" id="bidamount" class="form-control" name="bid[bidamount]" placeholder="MinBid: <%= item.minimumBid %> " min="<%= item.minimumBid %>" required autofocus>
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>
<% include ../partials/footer %>