<% include ../partials/header %>

<div class="container">
    <div class="row">
        <form class="form-signin" action="/campgrounds/<%= item._id %>/comments" method="POST">
            <div class="text-center mb-4">
                <h1 style="text-align: center">Add New Comment to <%= item.name %></h1>
             </div>
            <div class="card card-body bg-light">
                <div class="form-group">
                    <label for="Comment">Comment</label>
                    <input type="text" id="Comment" class="form-control" name="comment[text]" placeholder="text" required autofocus>
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
            </div>
        </form>
    </div>
</div>
<% include ../partials/footer %>